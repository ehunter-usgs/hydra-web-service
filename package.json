{
  "name": "hydra-web-service",
  "version": "0.1.0",
  "description": "Web service for information from Hydra backend.",
  "repository": {
    "type": "git",
    "url": "https://github.com/usgs/hydra-web-service.git"
  },
  "keywords": [
    "usgs"
  ],
  "scripts": {
    "codecov": "istanbul cover _mocha -- -u exports \"test/**/*Test.js\" -R spec",
    "dev": "npm-run-all --parallel watch start",
    "install": "node src/lib/pre-install",
    "lint": "eslint \"**/*.js\"",
    "start": "nodemon --watch src src/server.js",
    "test": "mocha \"test/**/*Test.js\" --reporter spec",
    "uninstall": "node src/lib/uninstall --non-interactive",
    "watch": "watch \"npm run lint && npm run test\" src test"
  },
  "pre-commit": [
    "lint",
    "test"
  ],
  "license": "CC0-1.0",
  "dependencies": {
    "express": "^4.14.0",
    "extend": "^3.0.0",
    "inquirer": "^1.1.2",
    "nodemon": "^1.9.2"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "eslint": "^3.1.1",
    "istanbul": "^0.4.4",
    "mocha": "^2.5.3",
    "npm-run-all": "^2.3.0",
    "pre-commit": "^1.1.3",
    "sinon": "^1.17.4",
    "watch": "^0.19.1"
  },
  "optionalDependencies": {
    "oracledb": "^1.10.0"
  },
  "engines": {
    "node": ">=4.2.4"
  }
}
